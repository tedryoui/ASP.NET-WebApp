@model ControllersTest.Models.Login
 
<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["MyNewWebPage"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="h-100">
<div class="row d-flex justify-content-center">
	<div class="col-3">
		<div class="card mt-5">
			<article class="card-body">
				<h4 class="card-title text-center mb-4 mt-1">Вход</h4>
				<hr>
				<p class="text-success text-center">Авторизируйтесь пожалуйста</p>
				<form asp-action="Login" asp-controller="Auth">
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"> <i class="fa fa-user"></i> </span>
							</div>
							<input asp-for="Email" class="form-control" placeholder="Email or login">
						</div> <!-- input-group.// -->
					</div> <!-- form-group// -->
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
							</div>
							<input asp-for="Password" class="form-control" placeholder="******">
						</div> <!-- input-group.// -->
					</div> <!-- form-group// -->
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block"> Войти </button>
					</div> <!-- form-group// -->
				</form>
			</article>
		</div>
	</div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
